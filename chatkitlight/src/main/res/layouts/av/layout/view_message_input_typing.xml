<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/messageInput"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_edittext_height"
        android:layout_marginEnd="@dimen/global_margin"
        android:layout_weight="1"
        android:maxLines="1"
        android:paddingStart="@dimen/global_padding"
        android:paddingEnd="@dimen/global_padding"
        android:fontFamily="@font/app_font"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/dark_gray"
        android:cursorVisible="true"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/attachmentButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@id/attachmentButton"
        android:layout_width="@dimen/input_item_size"
        android:layout_height="@dimen/input_item_size"
        android:layout_marginStart="@dimen/global_margin"
        android:layout_marginEnd="@dimen/global_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/anim_button"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>