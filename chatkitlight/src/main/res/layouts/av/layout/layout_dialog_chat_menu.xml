<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_message_options"
        android:gravity="end|center"
        android:orientation="vertical"
        android:elevation="4dp"
        app:elevation="4dp"
        android:layout_marginRight="@dimen/global_margin"
        android:layout_marginLeft="@dimen/global_margin"
        android:paddingRight="@dimen/global_padding_extra"
        android:paddingLeft="@dimen/global_padding_extra">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_copy"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_marginTop="2dp"
            android:visibility="visible"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/dark_gray"
            android:text="@string/copy_message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/global_margin_extra"
            android:layout_marginEnd="@dimen/global_margin_extra"
            android:background="@color/warm_grey" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_resend"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/dark_gray"
            android:text="@string/resend_message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/global_margin_extra"
            android:layout_marginEnd="@dimen/global_margin_extra"
            android:background="@color/warm_grey" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_delete"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:gravity="start|center_vertical"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/dark_gray"
            android:text="@string/delete_message" />

    </LinearLayout>

</LinearLayout>