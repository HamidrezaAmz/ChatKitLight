<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_curve_light"
    android:padding="@dimen/global_padding_huge">

    <TextView
        android:id="@+id/tvMessage"
        style="@style/TextViewSubTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/global_padding_extra"
        android:text="@string/permission_needed"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_accept"
        style="@style/TextViewTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:gravity="center"
        android:padding="@dimen/global_padding_extra"
        android:text="@string/confirm_access"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_accept"
        style="@style/Widget.Button.Hit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_accept"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/global_margin_extra"
        android:background="@color/black"
        android:padding="@dimen/global_padding_middle"
        android:text="@string/confirm_access"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>