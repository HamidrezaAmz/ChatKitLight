<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#03A9F4"
        android:visibility="visible" />

    <ir.vasl.chatkitlight.ui.view.ConversationView
        android:id="@+id/conversationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:canShowDialog="true"
        app:canShowAttachment="false"
        app:canShowVoiceRecording="true"
        app:canShowExtraOptionButton="true"
        app:chatStyle="lawone" />

    <ir.vasl.chatkitlight.ui.customview.ImageViewCustom
        android:id="@+id/image2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="-300dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</LinearLayout>